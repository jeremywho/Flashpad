{
  "name": "flashpad",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-platform quick note capture app for Windows, Mac, iOS, and Android",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node -e \"['packages/mobile/node_modules/react','packages/mobile/node_modules/react-native','packages/electron/node_modules/react','packages/web/node_modules/react'].forEach(p=>{try{require('fs').rmSync(p,{recursive:true,force:true})}catch{}})\"",
    "backend": "cd packages/backend && dotnet run",
    "electron": "cd packages/electron && npm run electron:dev",
    "electron:prod": "cd packages/electron && npm run electron:prod",
    "web": "cd packages/web && npm run dev",
    "web:prod": "cd packages/web && npm run dev:prod",
    "mobile": "cd packages/mobile && npm run start",
    "mobile:android": "cd packages/mobile && npm run android",
    "mobile:ios": "cd packages/mobile && npm run ios",
    "build:electron": "cd packages/electron && npm run build",
    "build:web": "cd packages/web && npm run build",
    "build:mobile:android": "cd packages/mobile && npm run build:android",
    "build:mobile:ios": "cd packages/mobile && npm run build:ios",
    "install:all": "npm install && cd packages/backend && dotnet restore",
    "pods": "cd packages/mobile/ios && pod install",
    "pods:clean": "cd packages/mobile/ios && rm -rf Pods Podfile.lock && pod install"
  },
  "keywords": [
    "flashpad",
    "notes",
    "quick-capture",
    "electron",
    "react-native",
    "dotnet",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.28.6"
  },
  "devDependencies": {
    "sharp": "^0.34.5"
  }
}
